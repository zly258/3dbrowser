{
  "name": "@zhangly1403/3dbrowser",
  "private": false,
  "version": "1.3.0",
  "description": "A high-performance 3D model browser based on Three.js, supporting IFC, 3D Tiles, GLB, and more.",
  "keywords": [
    "threejs",
    "bim",
    "ifc",
    "3dtiles",
    "3d-viewer",
    "browser"
  ],
  "license": "CC-BY-NC-4.0",
  "author": "zhangly1403@163.com",
  "type": "module",
  "main": "./dist/3dbrowser.umd.js",
  "module": "./dist/3dbrowser.es.js",
  "types": "./dist/src/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/src/index.d.ts",
      "import": "./dist/3dbrowser.es.js",
      "require": "./dist/3dbrowser.umd.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "vite",
    "build": "vite build && npx tsc -p tsconfig.lib.json",
    "preview": "vite preview",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://127.0.0.1:5173 && electron .\"",
    "electron:build": "npm run build && electron-builder"
  },
  "dependencies": {
    "3d-tiles-renderer": "0.3.31",
    "lucide-react": "^0.562.0",
    "occt-import-js": "^0.0.23",
    "pako": "^2.1.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "terser": "^5.44.1",
    "three": "^0.181.2",
    "web-ifc": "^0.0.74"
  },
  "devDependencies": {
    "@types/node": "^22.14.0",
    "@vitejs/plugin-react": "^5.0.0",
    "concurrently": "^9.2.1",
    "electron": "^39.2.7",
    "electron-builder": "^26.4.0",
    "typescript": "~5.8.2",
    "vite": "^6.2.0",
    "wait-on": "^9.0.3"
  },
  "build": {
    "electronDist": "electron-runtime",
    "appId": "com.3dbrowser.app",
    "productName": "3D Browser",
    "directories": {
      "output": "dist_electron"
    },
    "files": [
      "dist/**/*",
      "main.cjs",
      "package.json"
    ],
    "asar": true,
    "win": {
      "signAndEditExecutable": false,
      "target": [
        {
          "target": "dir",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "3D Browser"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Graphics"
    }
  }
}
